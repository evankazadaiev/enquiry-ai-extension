{
    "manifest_version": 3,
    "name": "Enquiry AI",
    "description": "Chrome Extension, TypeScript, Visual Studio Code",
    "version": "0.0.1",
    "minimum_chrome_version": "92",
    "action": {
        "default_icon": {
          "16": "icons/icon.png",
          "24": "icons/icon.png",
          "32": "icons/icon.png"
        },
        "default_title": "Enquiry AI",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": [
            "content.js"
          ]
        }
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "contextMenus",
      "storage",
      "unlimitedStorage"
    ],
    "host_permissions": [
      "<all_urls>"
    ], 
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
  }